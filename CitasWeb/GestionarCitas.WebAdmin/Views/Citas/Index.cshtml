@model IEnumerable<Admon.BL.Cita>

@{
    ViewBag.Title = "Citas";
}

<h2>Citas</h2>

<p>
    @Html.ActionLink("Nueva Cita", "Crear")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Paciente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Activo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@item.Paciente.UrlImagen" alt="@item.Paciente.Nombre" style="max-width: 64px; height: auto;"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Paciente.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Activo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.Id }) |
            @Html.ActionLink("Detalle", "Detalle", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id = item.Id }) |
        </td>
    </tr>
}

</table>

@Html.ActionLink("Regresar a Pacientes", "Index", "Pacientes")
